@inherits LayoutComponentBase

<div class="page d-flex flex-column min-vh-100">

    <!-- Fixed Top Nav -->
    <header class="bg-primary text-light px-4 py-3 d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-3">
            <img src="/images/GoTorz.png" alt="Gotorz Logo" style="max-height: 50px;" />
            <h5 class="mb-0">Gotorz Travel Customer</h5>
        </div>

        <nav>
            <NavLink href="/" class="text-light me-3">Customer Home</NavLink>
            <NavLink href="/Travelpackage-Browse" class="text-light me-3">Travelpackages</NavLink>
            <NavLink href="/about" class="text-light">About Us</NavLink>
            <NavLink href="/login" class="text-light">Log in</NavLink>
            <NavLink href="/CreateUser" class="text-light">Sign up</NavLink>
        </nav>

    </header>

    <!-- Main Content -->
    <main class="flex-fill px-4 py-5">
        @Body
    </main>

</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
