@inherits LayoutComponentBase

<div class="page">
    <TopNavBar />
    <main class="container-fluid">
        <div class="top-row d-flex justify-content-between align-items-center bg-primary py-3 px-4">
            <a class="text-light" href="" target="_blank">About Us</a>
            <img class="mt-1 ml-5 mr-5 mb-1" alt="Gotorz Logo" src="/images/GoTorz.png" style="max-width: 150px; max-height: 100px; object-fit: contain;" />

        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
