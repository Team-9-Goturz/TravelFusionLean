@using Shared.Dtos

<link href="css/CustomColors.css" rel="stylesheet" />

@code {
    [Parameter]
    public TravelPackageSearchDTO searchDTO { get; set; }

    [Parameter]
    public EventCallback OnSearch { get; set; }
}

<div class="card p-3 mb-3 shadow-sm w-100 rounded-3" style="margin-left: 0; margin-right: 0; border-radius: 12px;">
    <div class="row g-2 align-items-end px-3">
        <div class="col-md">
            <label for="departureLocation" class="form-label">Afrejsested</label>
            <input type="text" id="departureLocation" class="form-control" @bind="searchDTO.DepartureLocation" placeholder="F.eks. Danmark eller København" />
        </div>
        <div class="col-md">
            <label for="destination" class="form-label">Destination</label>
            <input type="text" id="destination" class="form-control" @bind="searchDTO.Destination" placeholder="F.eks. Paris eller Frankrig" />
        </div>
        <div class="col-md">
            <label for="dateFrom" class="form-label">Afrejsedato</label>
            <input type="date" id="dateFrom" class="form-control" @bind="searchDTO.DepartureDateEarliest" />
        </div>
        <div class="col-md">
            <label for="travelers" class="form-label">Rejsende</label>
            <input type="number" id="travelers" class="form-control" @bind="searchDTO.NumberOfTravelers" min="1" />
        </div>
        <div class="col-md">
            <label for="priceFrom" class="form-label">Pris (min)</label>
            <input type="number" id="priceFrom" class="form-control" @bind="searchDTO.MinPrice" />
        </div>
        <div class="col-md">
            <label for="priceTo" class="form-label">Pris (maks)</label>
            <input type="number" id="priceTo" class="form-control" @bind="searchDTO.MaxPrice" />
        </div>
        <div class="col-auto">
            <button class="btn btn-warning btn-sm d-flex align-items-center gap-1" @onclick="OnSearchClicked">
                🔍 Søg
            </button>
        </div>
    </div>
</div>

@code {
    private async Task OnSearchClicked()
    {
        await OnSearch.InvokeAsync(null);
    }
}
